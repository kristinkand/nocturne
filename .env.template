# Nocturne Connect Configuration Template
# Copy this file to .env and fill in your details

# ===========================================
# REQUIRED: Data Source Configuration
# ===========================================
# Specify which data source to use:
# Options: glooko, minimedcarelink, dexcomshare, linkup, nightscout
CONNECT_SOURCE=

# ===========================================
# REQUIRED: Nightscout Target Configuration
# ===========================================
# Your Nightscout instance URL (where data will be uploaded)
url=
# Your Nightscout API Secret (from your Nightscout site)
apiSecret=

# ===========================================
# Glooko Configuration (if using glooko)
# ===========================================
CONNECT_GLOOKO_EMAIL=
CONNECT_GLOOKO_PASSWORD=
CONNECT_GLOOKO_SERVER=eu.api.glooko.com
CONNECT_GLOOKO_TIMEZONE_OFFSET=0

# ===========================================
# MiniMed CareLink Configuration (if using minimedcarelink)
# ===========================================
CONNECT_CARELINK_USERNAME=
CONNECT_CARELINK_PASSWORD=
CONNECT_CARELINK_REGION=us
CONNECT_CARELINK_COUNTRY=
CONNECT_CARELINK_PATIENT_USERNAME=

# ===========================================
# Dexcom Share Configuration (if using dexcomshare)
# ===========================================
CONNECT_SHARE_ACCOUNT_NAME=
CONNECT_SHARE_PASSWORD=
CONNECT_SHARE_REGION=us
CONNECT_SHARE_SERVER=

# ===========================================
# LibreLinkUp Configuration (if using linkup)
# ===========================================
CONNECT_LINK_UP_USERNAME=
CONNECT_LINK_UP_PASSWORD=
CONNECT_LINK_UP_REGION=EU
CONNECT_LINK_UP_SERVER=
CONNECT_LINK_UP_PATIENT_ID=

# ===========================================
# Nightscout Source Configuration (if using nightscout-to-nightscout sync)
# ===========================================
CONNECT_SOURCE_ENDPOINT=
CONNECT_SOURCE_API_SECRET=

# ===========================================
# OPTIONAL: Nightscout Display Configuration
# ===========================================
# Database connection (if self-hosting Nightscout)
CUSTOMCONNSTR_mongo=
MONGO_COLLECTION=entries
MONGO_PROFILE_COLLECTION=profile

# Display settings
DISPLAY_UNITS=mmol
TIME_FORMAT=24
LANGUAGE=en
HOSTNAME=0.0.0.0
PORT=1337
NODE_ENV=development

# Nightscout features to enable
ENABLE=careportal basal dbsize rawbg iob maker cob bwp cage iage sage boluscalc pushover treatmentnotify loop pump profile food openaps bage alexa override speech cors
SHOW_PLUGINS=careportal pump openaps loop iob cob basal
ALARM_TYPES=simple predict

# Security settings
INSECURE_USE_HTTP=false
AUTH_DEFAULT_ROLES=readable
