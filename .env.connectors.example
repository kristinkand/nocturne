# Nocturne Connector Configuration Environment Variables
# Copy this file to .env and update the values as needed

# General Configuration
NIGHTSCOUT_URL=http://localhost:1612
API_SECRET=your_api_secret_here

# Dexcom Share Configuration (Enable with: docker-compose --profile dexcom up)
DEXCOM_USERNAME=your_dexcom_username
DEXCOM_PASSWORD=your_dexcom_password
DEXCOM_REGION=US
DEXCOM_SYNC_INTERVAL=5

# Glooko Configuration (Enable with: docker-compose --profile glooko up)
GLOOKO_EMAIL=your_glooko_email
GLOOKO_PASSWORD=your_glooko_password
GLOOKO_TIMEZONE_OFFSET=0
GLOOKO_SYNC_INTERVAL=15

# FreeStyle LibreLink Configuration (Enable with: docker-compose --profile freestyle up)
LIBRE_USERNAME=your_libre_username
LIBRE_PASSWORD=your_libre_password
LIBRE_REGION=US
LIBRE_SYNC_INTERVAL=5

# MiniMed CareLink Configuration (Enable with: docker-compose --profile carelink up)
CARELINK_USERNAME=your_carelink_username
CARELINK_PASSWORD=your_carelink_password
CARELINK_REGION=US
CARELINK_SYNC_INTERVAL=15

# Nightscout-to-Nightscout Configuration (Enable with: docker-compose --profile nightscout up)
NIGHTSCOUT_SOURCE_URL=https://your-source-nightscout.herokuapp.com
NIGHTSCOUT_SOURCE_API_SECRET=your_source_api_secret
NIGHTSCOUT_SYNC_INTERVAL=15

# MyFitnessPal Configuration (Enable with: docker-compose --profile myfitnesspal up)
MYFITNESSPAL_USERNAME=your_myfitnesspal_username
MYFITNESSPAL_PASSWORD=your_myfitnesspal_password
MYFITNESSPAL_SYNC_INTERVAL=60

# Usage Examples:
# Start all services: docker-compose up
# Start with Dexcom connector: docker-compose --profile dexcom up
# Start with multiple connectors: docker-compose --profile dexcom --profile glooko up
# Start all connectors: docker-compose --profile connectors up