# Docker Registry Configuration
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-dockerhub-username
VERSION=latest

# Production Environment Variables
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
POSTGRES_DB=nocturne
POSTGRES_USER=nocturne_user
POSTGRES_PASSWORD=nocturne_password
POSTGRES_CONNECTION_STRING=Host=postgresql;Database=nocturne;Username=nocturne_user;Password=nocturne_password

# API Configuration
SIGNALR_HUB_URL=http://nocturne-api:1612/hubs/data
SIGNALR_ALARM_HUB_URL=http://nocturne-api:1612/hubs/alarms
NOCTURNE_API_URL=http://nocturne-api:1612

# Frontend Configuration
PUBLIC_API_URL=http://localhost:1612

# WebSocket Bridge Configuration
CORS_ORIGINS=*
LOG_LEVEL=info

# Security (set strong passwords in production)
API_SECRET=your-api-secret-here
JWT_SECRET=your-jwt-secret-here

# Nightscout Configuration (optional - for proxy testing and data sync)
NIGHTSCOUT_URL=https://your-nightscout-instance.com
NIGHTSCOUT_API_SECRET=your-nightscout-api-secret